<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Valifest</title>
    <link rel="stylesheet" href="{{ url_for('static', filename='guestPage.css') }}">

</head>
<body>
    <div>
        <section class = 'title'>
            <div class ='title' ></div>
            <h1 >VALIFEST</h1>

    <div>
        <section class ="agenda">
            <h1 >Agenda</h1>
    </div>
        {% if user_role == 'admin' or  user_role == 'user' %}
            <a href="http://127.0.0.1:5001/create/agenda" class="nieuwButton">Nieuw agenda aanmaken</a>

        {% endif %}
    <div>

</div>

    <div class = 'kalender'> 
        
        <table border="1px">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>NAAM</th>
                    <th>DATUM</th>
                </tr>
            </thead>
            <tbody>
                {% for event_calendar in agendas%}
                <tr>
                    
                <td> {{event_calendar.id}} </td>
                <td> <a href = "http://127.0.0.1:5001/agenda/{{event_calendar.url_name}}">{{event_calendar.title}} </a></td>                
                <td>{{event_calendar.date_created}}</td>
                </tr>
                {% endfor%}

            </tbody>
        </table>
    </div>

</body>
</html>
